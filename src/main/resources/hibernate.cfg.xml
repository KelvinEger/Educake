<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.org/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
    <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
    <property name="hibernate.connection.username">EDUCAKE</property>
    <property name="hibernate.connection.password">root</property>
    <property name="show_sql">true</property>
    <property name="hibernate.hbm2ddl.auto">create</property>
    <mapping class="io.github.printf.educake.model.Address"/>
    <mapping class="io.github.printf.educake.model.Phone"/>
    <mapping class="io.github.printf.educake.model.Payment"/>
    <mapping class="io.github.printf.educake.model.Person"/>
    <mapping class="io.github.printf.educake.model.Phone"/>
    <mapping class="io.github.printf.educake.model.Student"/>
    <mapping class="io.github.printf.educake.model.Login"/>
  </session-factory>
</hibernate-configuration>
